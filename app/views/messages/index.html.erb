<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <span class="label label-default"><%= message.age.present? ? "#{message.age} 歳" : "年齢不詳" %></span>
      (<%= link_to "編集" , edit_message_path(message) %>
       <%= link_to "削除" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>)
      <br>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= render 'form' %>
